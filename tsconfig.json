{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2015",
      "dom"
    ],
    "declaration": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
    "baseUrl": "src",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "test", "example"]
}