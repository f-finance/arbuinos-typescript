{
  "name": "arbuinos-typescript",
  "version": "0.0.1",
  "license": "MIT",
  "author": "",
  "_comment": {
    "scripts": {
      "start": "tsdx watch",
      "build": "tsdx build",
      "ts": "tsc --pretty",
      "test": "tsdx test",
      "lint": "tsdx lint",
      "prepare": "tsdx build",
      "size": "size-limit",
      "analyze": "size-limit --why",
      "publish": "np"
    }
  },
  "main": "./dist/bot.js",
  "scripts": {
    "distribute": "yarn build-ts && node dist/server.js",
    "develop": "tsc-watch --skipLibCheck --onSuccess 'node dist/server.js'",
    "build-ts": "tsc --skipLibCheck",
    "test": "yarn jest --forceExit --runInBand",
    "pretty": "prettier --check src",
    "lint": "yarn pretty && eslint --max-warnings 0 --ext ts,tsx,json src"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.3",
    "@types/react": "^17.0.39",
    "tsdx": "^0.14.1",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@microsoft/signalr": "^6.0.2",
    "@taquito/signer": "^11.2.0",
    "@taquito/taquito": "^11.2.0",
    "async-retry": "^1.3.3",
    "batch-request-js": "^2.0.2",
    "p-memoize": "^6.0.1",
    "react": "^17.0.2",
    "type-fest": "^2.12.0",
    "winston": "^3.6.0"
  }
